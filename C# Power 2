using System;


namespace Abolfazl_Najafy
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("tavan ra vard konid");

            int x = int.Parse(Console.ReadLine());

            int y = 1;

            if (x<1)
            {
                Console.WriteLine(y);
            }
            else
            {
                for (int i = 0; i < x; i++)

                    y *= 2;

                Console.WriteLine(y);
            }

            Console.ReadKey();

        }
    }
}
